{% extends 'base.jinja2' %}

{% block title %}Online Status - {% endblock %}

{% block content %}

  <div class="bd-pageheader">
    <div class="container">
      <h1>Online Status</h1>
    </div>
  </div>

  <div class="container">
    <form class="form-inline" role="search">
      <div class="form-group">
        <input type="text" class="form-control" name="keyword" value="{% if keyword %}{{ keyword }}{% endif %}" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>When</th>
            <th>Who</th>
            <th>Problem</th>
            <th>Lang</th>
            <th>Verdict</th>
            <th>Time</th>
            <th>Memory</th>
          </tr>
        </thead>
        <tbody>
          {% for submission in submission_list %}
            <tr>
              <td {% if submission.contest %}style="text-decoration: line-through"{% endif %} scope="row">
                {% if submission.is_privileged %}
                <a href="{{ url('submission', submission.pk) }}">{{ submission.pk }}</a>
                {% else %}
                {{ submission.pk }}
                {% endif %}
              </td>
              <td>{{ submission.create_time | date('Y-m-d H:i') }}</td>
              <td><a class="decoration-free" href="{{ url('account:generic', submission.author) }}">{{ submission.author.get_username_display() | safe }}</a></td>
              <td><a href="{{ url('problem', submission.problem_id) }}">{{ submission.problem }}</a></td>
              <td>{{ submission.get_lang_display() }}</td>
              <td class="verdict-{{ submission.get_verdict_color() }}">{{ submission.get_status_display() }}</td>
              <td>{{ submission.get_time_display() }}</td>
              <td>{{ submission.get_memory_display() }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    {{ my_paginator() }}
  </div>

{% endblock %}
