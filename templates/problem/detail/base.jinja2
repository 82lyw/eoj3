{% extends 'base.jinja2' %}

{% block title %}Problem #{{ problem.pk }} - {% endblock %}

{% block page_header %}{{ problem.pk }}. {{ problem.title }}{% endblock %}

{% block content %}

  <div class="ui secondary menu small weight normal stackable">
    <a class="item {{ active('problem:detail') }}" href="{{ url('problem:detail', problem.pk) }}">DESCRIPTION</a>
    <a class="item {{ active('problem:submit') }}" href="{{ url('problem:submit', problem.pk) }}">SUBMIT</a>
    <a class="item {{ active('problem:statistics') }}" href="{{ url('problem:statistics', problem.pk) }}">STATISTICS</a>
    <a class="item {{ active('problem:discussion') }}" href="{{ url('problem:discussion', problem.pk) }}">DISCUSSION
        <div class="floating ui grey label small">{{ discussion_count }}</div></a>
    {% if is_privileged %}
    <a class="item" href="{{ url('polygon:problem_edit', problem.pk) }}">MANAGE</a>
    {% endif %}
  </div>

  {% block problem_content %}
  {% endblock %}

{% endblock %}
