{% extends 'base.jinja2' %}

{% block title %}Problem #{{ problem.pk }} - {% endblock %}

{% block page_header %}{{ problem.pk }}. {{ problem.title }}{% endblock %}

{% block content %}

  <div class="ui secondary menu small weight normal">
    <a class="item {{ active('problem:detail') }}" href="{{ url('problem:detail', problem.pk) }}">DESCRIPTION</a>
    <a class="item {{ active('problem:submit') }}" href="{{ url('problem:submit', problem.pk) }}">SUBMIT</a>
    <a class="item {{ active('problem:statistics') }}" href="#">STATISTICS</a>
    <a class="item {{ active('problem:discussion') }}" href="{{ url('problem:status') }}">DISCUSSION</a>
  </div>

  {% block problem_content %}
  {% endblock %}

  {% include 'components/math_support.jinja2' %}

{% endblock %}
