{% extends 'contest/base.jinja2' %}
{% block contest_content %}

<div>
  <div class="content-header">
    <h2>Submit your code</h2>
  </div>
</div>
<form class="form" action="{{ request.path }}" method="post">
  {% csrf_token %}
  <div class="form-group row">
    <label class="col-2 col-form-label">Problem:</label>
    {# TODO: this should be a choice field #}
    <div class="col-8">
      {{ render_field(form.problem_identifier, {'class': "form-control"}) }}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label">Language:</label>
    <div class="col-8">
      {{ render_field(form.lang, {'class': "form-control"}) }}
    </div>
  </div>
  <div class="form-group">
    {{ render_field(form.code, {'class': "form-control", 'rows': "18", 'style': "font-family: monospace;"}) }}
  </div>
  <button class="btn btn-lg btn-outline-primary" type="submit">Submit</button>

</form>

{% endblock %}