{% macro problem_view(title, contest) %}
  <div class="problem-header">
    <div class="property">
      <p><strong>Time limit per test: </strong>{{ problem.time_limit / 1000 }} seconds</p>
      <p><strong>Memory limit: </strong>{{ problem.memory_limit }} megabytes</p>
    </div>
  </div>

  {% cache 3600 'problem_view#' + problem.pk.__str__() + '#' + problem.update_time.__str__() %}
  <div class="problem-body">
    {% if problem.description %}
      <div class="passage">
        {{ problem.description | markdown | safer | safe }}
      </div>
    {% endif %}
    {% if not problem.interactor or (problem.input and problem.output) %}
      {% if problem.input %}
        <h3 class="title">Input</h3>
        {{ problem.input | markdown | safer | safe }}
      {% endif %}
      {% if problem.output %}
        <h3 class="title">Output</h3>
        {{ problem.output | markdown | safer | safe }}
      {% endif %}
    {% else %}
      {% if problem.input %}
        <h3 class="title">Interaction</h3>
        {{ problem.input | markdown | safer | safe }}
      {% endif %}
      {% if problem.output %}
        <h3 class="title">Interaction</h3>
        {{ problem.output | markdown | safer | safe }}
      {% endif %}
    {% endif %}
    {% if problem.sample %}
      <div class="passage examples">
        <h3 class="title">Examples</h3>
        {% for input, output in problem.sample_display %}
          <div class="example">
            <div class="input">
              <div class="title">Input</div>
              <pre class="sample-content" data-tooltip="Click to copy" data-inverted="">{{ input }}</pre>
            </div>
            <div class="output">
              <div class="title">Output</div>
              <pre class="sample-content" data-tooltip="Click to copy" data-inverted="">{{ output }}</pre>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    {% if problem.hint %}
      <h3 class="title">Note</h3>
      {{ problem.hint | markdown | safer | safe }}
    {% endif %}
  </div>
  {% endcache %}

  <script>
    $(".sample-content").click(function() {
      copyToClipboard($(this)[0].textContent);
    })
  </script>
{% endmacro %}