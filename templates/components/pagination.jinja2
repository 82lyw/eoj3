<div>
  <ul class="pagination" role="navigation" aria-label="Pagination">

    {% if page_obj.has_previous() %}
    <li class="pagination-previous">
      <a href="?{{ url_replace(request, 'page', page_obj.previous_page_number()) }}">Previous</a>
    </li>
    {% else %}
    <li class="pagination-previous disabled">Previous</li>
    {% endif %}

    {% for page_num in page_numbers %}
      {% if page_num == page_obj.number %}
        <li class="current">{{ page_num }}</li>
      {% else %}
        <li>
          <a class="page-link" href="?{{ url_replace(request, 'page', page_num) }}">{{ page_num }}</a>
        </li>
      {% endif %}
    {% endfor %}

    {% if page_obj.has_next() %}
    <li class="pagination-next">
      <a href="?{{ url_replace(request, 'page', page_obj.next_page_number()) }}">Next</a>
    </li>
    {% else %}
    <li class="pagination-next disabled">Next</li>
    {% endif %}

  </ul>
</div>
