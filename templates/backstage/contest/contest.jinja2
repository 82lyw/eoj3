{% extends 'backstage/base.jinja2' %}

{% block content_header %}
  Contests
{% endblock %}

{% block backstage_content %}

  {% include 'components/message.jinja2' %}

  <div class="mb-3">
    <a role="button" class="btn btn-primary" href="{{ url('backstage:contest_create') }}">Add a contest</a>
  </div>
  <div class="scrollable">
    <table class="table">
      <thead>
        <tr>
          <th width="8%">#</th>
          <th width="36%">Title</th>
          <th width="23%">Start time</th>
          <th width="23%">End time</th>
          <th width="10%">Edit</th>
        </tr>
      </thead>
      <tbody>
        {% for contest in contest_list %}
          <tr>
            <td scope="row">{{ contest.pk }}</td>
            <td>{{ contest.title }}</td>
            <td>{{ contest.start_time | date('Y-m-d H:i') }}</td>
            <td>{{ contest.end_time | date('Y-m-d H:i') }}</td>
            <td><a href="{{ url('backstage:contest_manage', contest.pk) }}" class="text-primary">Manage</a></td>
            {# NOTE: Contest cannot be deleted once created #}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {{ my_paginator() }}

{% endblock %}
