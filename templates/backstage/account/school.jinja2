{% extends 'backstage/base.jinja2' %}
{% block content_header %}
  Schools
{% endblock %}

{% block backstage_content %}

  {% include 'components/message.jinja2' %}

  <table class="ui celled table">
    <thead>
      <tr>
        <th colspan="4">
          <button class="ui right floated primary labeled icon button modal-link" data-target="#school-add">
            <i class="server icon"></i> Add School
          </button>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for school in school_list %}
        <tr>
          <td>{{ school.name }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {% call modal(id="school-add", title="Add a school", action=url('backstage:account_school_add')) %}
    {% csrf_token %}
    <div class="field">
      <label>School name:</label>
      <input type="text" name="name">
    </div>
  {% endcall %}

{% endblock %}
