{% extends 'backstage/base.jinja2' %}

{% block content_header %}
  Privileges
{% endblock %}

{% block backstage_content %}

  {% include 'components/message.jinja2' %}

  <div class="scrollable">
    <table class="table">
      <thead>
        <tr>
          <th width="40%">Who</th>
          <th width="30%">Privilege</th>
          <th width="30%">Password</th>
        </tr>
      </thead>
      <tbody>
        {% for user in user_list %}
          <tr>
            <td scope="row">{{ user.username }}</td>
            <td>{% if user.privilege == 'root' %}<span class="text-warning">{{ user.get_privilege_display() }}</span>
            {% else %}
              <a href="{{ url('backstage:account_privilege_switch', user.pk) }}">
              {{ user.get_privilege_display() }}</a>
            {% endif %}</td>
            <td><a class="text-danger" href="#">Reset</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {{ my_paginator() }}

{% endblock %}
