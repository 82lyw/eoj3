{% extends 'backstage/base.jinja2' %}

{% block content_header %}
  Problems
{% endblock %}

{% block backstage_content %}
  {% include 'components/message.jinja2' %}
  <p>
    <a role="button" class="btn btn-default" href="{{ url('backstage:problem_create') }}">Add a problem</a>
  </p>
  <div class="scrollable">
    <table class="table">
      <thead>
        <tr>
          <th width="10%">#</th>
          <th width="60%">Name</th>
          <th width="15%">Profile</th>
          <th width="15%">Testdata</th>
        </tr>
      </thead>
      <tbody>
        {% for problem in problem_list %}
          <tr>
            <th scope="row">{{ problem.pk }}</th>
            <td>{{ problem.title }}</td>
            <td><a href="{{ url('backstage:problem_edit', problem.pk) }}" class="text-primary">Edit</a></td>
            <td><a href="{{ url('backstage:problem_testdata', problem.pk) }}" class="text-primary">Testdata</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {{ my_paginator() }}

{% endblock %}


{% block script %}

{% endblock %}