{% extends 'backstage/base.jinja2' %}

{% block content_header %}
  Judge Servers
{% endblock %}

{% block backstage_content %}

  {% include 'components/message.jinja2' %}

  <table class="ui compact celled definition table">
    <thead class="full-width">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Address</th>
        <th>Last Seen</th>
        <th>Edit</th>
        <th>Test</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {% for server in server_list %}
        <tr>
          <td class="collapsing">
            <div class="ui fitted slider checkbox">
              <input name="{{ server.id }}" type="checkbox" {% if server.enabled %}checked{% endif %}>
            </div>
          </td>
          <td>{{ server.name }}</td>
          <td>{{ server.ip }}:{{ server.port }}</td>
          <td>{{ server.last_seen_time | date('Y-m-d H:i:s') }}</td>
          <td><a href="{{ url('backstage:server_edit', server.pk) }}">Update</a></td>
          <td><a href="#">Test</a></td>
          <td><a class="post-link" data-link="{{ url('backstage:server_delete', server.pk) }}">Delete</a></td>
        </tr>
      {% endfor %}
    </tbody>
    <tfoot class="full-width">
      <tr>
        <th></th>
        <th colspan="6">
          <a href="{{ url('backstage:server_create') }}" class="ui right floated small primary labeled icon button">
            <i class="server icon"></i> Add Server
          </a>
        </th>
      </tr>
    </tfoot>
  </table>

{% endblock %}
