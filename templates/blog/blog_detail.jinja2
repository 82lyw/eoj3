{% extends 'base.jinja2' %}

{% block title %}{{ blog.title }} - Blog - {% endblock %}

{% block content %}

  <div class="bd-pageheader">
    <div class="container">
      <h1>View Blog</h1>
    </div>
  </div>

  <div class="container">
    <div class="content-header">
      <h2>{{ blog.title }}</h2>
      <a class="decoration-free" href="{{ url('generic', blog.author.username) }}">{{ blog.author.get_username_display() | safe }}</a>
              last edited at {{ blog.edit_time | date('Y-m-d H:i:s') }}{% if is_privileged %}, <a href="{{ url('blog:update', blog.pk) }}">edit</a>{% endif %}
    </div>
    <div class="content-mini-section">{{ blog.text | markdown | safe }}</div>
    <div style="margin-top: 4em" class="content-section">
      <h3>Comments</h3>
      {% for comment in comment_list %}
        {{ comment.author }} - {{ comment.text }}
      {% endfor %}
      {{ my_paginator() }}
    </div>
    <form action="{{ url('blog:add_comment', blog.pk) }}" method="POST">
      <h3>Add a comment</h3>
      {% csrf_token %}
      <div class="form-group">
        <textarea class="form-control" id="comment-text" name="text" rows="3" placeholder="Put down your comment here."></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>



  {% include 'components/math_support.jinja2' %}
{% endblock %}
