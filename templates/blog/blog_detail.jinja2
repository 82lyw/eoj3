{% extends 'base.jinja2' %}
{% from 'components/nickname.jinja2' import clickable_nickname with context %}

{% block title %}{{ blog.title }} - Blog - {% endblock %}

{% block content %}

  <div class="bd-pageheader">
    <div class="container">
      <h1>View Blog</h1>
    </div>
  </div>

  <div class="container">
    <div class="content-header">
      <h2>{{ blog.title }}</h2>
      {{ clickable_nickname(blog.author) }} last edited at {{ blog.edit_time | date('Y-m-d H:i:s') }}
      {% if is_privileged %}, <a href="{{ url('blog:update', blog.pk) }}">edit</a>{% endif %}
    </div>
    <div class="content-mini-section">{{ blog.text | markdown | safe }}</div>
    <hr>
    <div style="margin-top: 4em" class="content-section">
      <h3>Comments</h3>
      {% for comment in comment_list %}
        <div class="comment">
          <a href="{{ url('generic', comment.author.username) }}" class="avatar">
            <img src="{{ comment.author.get_alien_small_src() }}">
          </a>
          <div class="content">
            <div><a class="author">{{ clickable_nickname(comment.author) }}</a> <small class="text-muted"><span class="date">{{ comment.create_time | date('Y-m-d H:i:s') }}</span></small></div>
            <div class="text">
              {{ comment.text }}
            </div>
          </div>
        </div>
      {% endfor %}
      {{ my_paginator() }}
    </div>
    <form action="{{ url('blog:add_comment', blog.pk) }}" method="POST">
      <h4>Add a comment</h4>
      {% csrf_token %}
      <div class="form-group">
        <textarea class="form-control" id="comment-text" name="text" rows="3" placeholder="Put down your comment here."></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>



  {% include 'components/math_support.jinja2' %}
{% endblock %}
