{% extends 'base.jinja2' %}

{% block content %}

  <div class="bd-pageheader">
    <div class="container">
      <h1>Contest List</h1>
    </div>
  </div>

  <div class="container">

    <table class="table">
      <thead>
        <tr>
          <th width="8%">#</th>
          <th width="40%">Title</th>
          <th width="22%">Start</th>
          <th width="10%">Length</th>
          <th width="10%" align="center">Participants</th>
          <th width="10%">Status</th>
        </tr>
      </thead>
      <tbody>
        {% for contest in contest_list %}
          <tr>
            <td scope="row">{{ contest.pk }}</td>
            <td><a href="{{ url('contest:dashboard', contest.pk) }}">{{ contest.title }}</a></td>
            <td>{{ contest.start_time }}</td>
            <td>02:00</td>
            <td>2300</td>
            <td>{{ contest.status }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    {{ my_paginator() }}
  </div>

{% endblock %}
